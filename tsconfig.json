{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "inlineSourceMap": false,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "importHelpers": true,
        "lib": [
            "dom",
            "es5",
            "es6",
            "es2015",
            "es2015.promise",
            "es2016",
            "es2017",
            "esnext",
            "esnext.asynciterable"
        ]
   },
   "include": [
        "src/index.ts",
        "src/server/**/*",
        "src/client/**/*",
        "src/config/*",
        "src/lib/**/*"
   ],
   "exclude": [
       "node_modules",
       "dist/.gitignore"
   ]
}