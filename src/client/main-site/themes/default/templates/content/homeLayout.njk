{% extends "../layout.njk" %}

{% block contentBlock %}
    <main id="site-main" class="site-main outer" role="main">
        <div class="inner">
    
            <div class="post-feed">
                {% for story in stories %}
                <article class="post-card post tag-crypto tag-bitcoin tag-currency tag-alt-coin featured">
                    <a class="post-card-image-link" href="/story/{{ story.slug }}">
                        <div class="post-card-image" style="background-image: url(/content/images/2018/01/rawpixel-com-252130.jpg)"></div>
                    </a>
                    <div class="post-card-content">
                        <a class="post-card-content-link" href="/story/{{ story.slug }}">
                            <header class="post-card-header">
                                <!-- <span class="post-card-tags">Crypto</span> -->
                                <h2 class="post-card-title">{{ story.title }}</h2>
                            </header>
                            <section class="post-card-excerpt">
                                {{ story.html | striptags(true) | truncate(150) }}
                            </section>
                        </a>
                        <footer class="post-card-meta">
                            <span class="post-card-author">
                                <a href="/author/shalom/">{{ story.author.name }}</a>
                            </span>
                        </footer>
                    </div>
                </article>
                {% endfor %}
            </div>
    
        </div>
    </main>
{% endblock %}