{% extends "./layout.njk" %}

{% block scriptBlock %}
    {{ super() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/holder/2.9.4/holder.min.js"></script>
{% endblock %}

{% block headerBlock %}
{% endblock %}

{% block contentBlock %}
    <div id="dashboard">
        <div id="mobile-navigation">
            <button id="nav-toggle" class="collapsed" data-toggle="collapse" data-target="#page-sidebar"><span></span>
            </button>
        </div>
        <div id="page-sidebar">
            <div id="header-logo" class="logo-bg text-center">
                <a href="/admin/stories" class="logo-content-big" title="TypeWrite Admin Panel">
                    {# TODO: replace with logo #}
                    <strong>&lt;</strong>
                    <em>t</em>
                    <strong>&gt;</strong>
                </a>
                <a id="close-sidebar" href="#" title="Close sidebar">
                    <i class="glyph-icon icon-outdent"></i>
                </a>
            </div>
            <div class="slimScrollDiv">
                <div class="scroll-sidebar">
                    <ul id="sidebar-menu">
                        <li class="header">
                            <span>Post Management</span>
                        </li>
                        <li>
                            <a href="/admin/story/new">
                                <i class="fas fa-file-alt fa-lg"></i>
                                <span>New Post</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/stories">
                                <i class="fas fa-book fa-lg"></i>
                                <span>All Posts</span>
                            </a>
                        </li>

                        <li class="header">
                            <span>Management</span>
                        </li>
                        <li>
                            <a href="/admin/manage-team">
                                <i class="fas fa-users fa-lg"></i>
                                <span>Manage Team</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/manage-subscribers">
                                <i class="fas fa-envelope fa-lg"></i>
                                <span>Manage Subscribers</span>
                            </a>
                        </li>

                        <li class="header">
                            <span>Settings</span>
                        </li>
                        <li>
                            <a href="/admin/general-settings">
                                <i class="fas fa-cogs fa-lg"></i>
                                <span>General</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/url-mapper">
                                <i class="fas fa-sitemap fa-lg"></i>
                                <span>Url Mapper</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/theme-setting">
                                <i class="fas fa-pencil-alt fa-lg"></i>
                                <span>Themes</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/categories">
                                <i class="fas fa-object-group fa-lg"></i>
                                <span>Categories</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/google-tag-manager">
                                <i class="fas fa-tags fa-lg"></i>
                                <span>Google Tag Manager</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/custom-codes">
                                <i class="fas fa-code fa-lg"></i>
                                <span>Custom Codes</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/web-hooks">
                                <i class="fas fa-link fa-lg"></i>
                                <span>Web Hooks</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/plugins">
                                <i class="fas fa-plug fa-lg"></i>
                                <span>Plugins</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="page-content-wrapper">
            <div id="page-content">
                <nav id="page-header" class="navbar navbar-expand-lg">
                    {# Left navbar #}
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="btn btn-lg" href="#" id="searchLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-search"></i>
                            </a>
                            <form class="dropdown-menu p-4" style="width: 300px;">
                                <div class="form-group">
                                    <input type="text" class="form-control">
                                </div>
                                <button class="btn btn-success btn-block">Search</button>
                            </form>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="btn btn-lg" href="#" id="announceLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-bullhorn"></i>
                            </a>
                            <div class="dropdown-menu">
                                <h6 class="dropdown-header">Alerts</h6>
                                <a href="#" class="dropdown-item">
                                    Announcement 1
                                </a>
                                <a href="#" class="dropdown-item">
                                    Announcement 2
                                </a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="btn btn-lg">
                                <i class="fas fa-expand-arrows-alt"></i>
                            </a>
                        </li>
                    </ul>
                    {# Right navbar #}
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" id="profileLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img width="28" src="http://blog.shalomsam.com/content/images/2017/12/login-avatar-icon.png" alt="Profile image">
                            </a>
                            <div class="dropdown-menu" aria-labelledby="profileLink">
                                <a href="/admin/profile" class="dropdown-item">
                                    Edit Profile
                                </a>
                                <div class="dropdown-divider"></div>
                                <a href="/admin/logout" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt"></i>
                                    Logout
                                </a>
                            </div>
                        </li>
                    </ul>
                </nav>
                {% block dashboardHeader %}
                    <div id="page-title">
                        <h2>{{ dashboardTitle }}</h2>
                    </div>
                {% endblock %}
                <div class="row">
                    {% block dashboardContent %}
                        {# To be overwritten by dashboard files #}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footerBlock %}
{% endblock %}